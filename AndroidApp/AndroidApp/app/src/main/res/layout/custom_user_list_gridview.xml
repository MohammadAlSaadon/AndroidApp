<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="386dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/bluegrid" >

        <TextView
            android:id="@+id/UserIdTxt"
            android:layout_width="318dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_horizontal|center_vertical"
            android:text="User Id"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.105" />

        <TextView
            android:id="@+id/UserNameTxt"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="left|center_vertical"
            android:text="Full Name"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/UserIdTxt"
            app:layout_constraintTop_toBottomOf="@+id/UserIdTxt"
            app:layout_constraintVertical_bias="0.042" />

        <TextView
            android:id="@+id/UserPhoneTxt"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="left|center_vertical"
            android:text="UserPhone"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/UserNameTxt"
            app:layout_constraintStart_toStartOf="@+id/UserNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/UserNameTxt"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/UserEmailTxt"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_vertical"
            android:text="User Email"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/UserPhoneTxt"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/UserPhoneTxt"
            app:layout_constraintTop_toBottomOf="@+id/UserPhoneTxt"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/UserDeleteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/delete"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintStart_toEndOf="@+id/UserNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/UserIdTxt"
            app:layout_constraintVertical_bias="0.264" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>