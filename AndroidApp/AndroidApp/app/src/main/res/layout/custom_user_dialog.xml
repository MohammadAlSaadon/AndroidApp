<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="333dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/updateBtn"
            android:layout_width="145dp"
            android:layout_height="42dp"
            android:layout_marginBottom="8dp"
            android:background="#096374"
            android:fontFamily="@font/cairo_semibold"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/UpdateUserFirstName"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/UpdateUserFirstName"
            app:layout_constraintTop_toBottomOf="@+id/UpdateUserEmail"
            app:layout_constraintVertical_bias="0.353" />

        <TextView
            android:id="@+id/kk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="User Update"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/divider"
            android:layout_width="363dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="230dp"
            android:background="@android:color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.167" />


        <EditText
            android:id="@+id/UpdateUserId"
            android:layout_width="287dp"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_corners_dialog"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="   UserId"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.081" />

        <EditText
            android:id="@+id/UpdateUserFirstName"
            android:layout_width="287dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_dialog"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="   First Name"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/UpdateUserId"
            app:layout_constraintStart_toStartOf="@+id/UpdateUserId"
            app:layout_constraintTop_toBottomOf="@+id/UpdateUserId" />

        <EditText
            android:id="@+id/UpdateUserLastName"
            android:layout_width="287dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_dialog"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="   LastName"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/UpdateUserId"
            app:layout_constraintStart_toStartOf="@+id/UpdateUserId"
            app:layout_constraintTop_toBottomOf="@+id/UpdateUserFirstName" />

        <EditText
            android:id="@+id/UpdateUserPhone"
            android:layout_width="287dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_dialog"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="   User Phone"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/UpdateUserId"
            app:layout_constraintStart_toStartOf="@+id/UpdateUserId"
            app:layout_constraintTop_toBottomOf="@+id/UpdateUserLastName" />


        <EditText
            android:id="@+id/UpdateUserEmail"
            android:layout_width="287dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_dialog"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="   User Email"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/UpdateUserId"
            app:layout_constraintStart_toStartOf="@+id/UpdateUserId"
            app:layout_constraintTop_toBottomOf="@+id/UpdateUserPhone" />

        <ProgressBar
            android:id="@+id/UpdateUserProgress"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="186dp"
            android:indeterminate="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.64" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
